<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AulaScreenAnimation.pgAnimacoes"
             Title="pgAnimacoes">
    <StackLayout>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Image x:Name="imgMundo"
                   Source="icon_world.png"
                   HeightRequest="200"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </StackLayout>
        <StackLayout VerticalOptions="End">
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="CenterAndExpand">

                <Button Text="Girar Vertical"
                        Clicked="btnGirarVerticalClicked"/>

                <Button Text="Girar Horizontal"
                        Clicked="btnGirarHorizontalClicked"/>

                <Button Text="Zoom +"
                        Clicked="btnZoomMaisClicked"/>

                <Button Text="Zoom -"
                        Clicked="btnZoomMenosClicked"/>

                <Button Text="Tremer"
                        Clicked="btnTremerClicked"/>

                <Button Text="Girar Zoom"
                        Clicked="btnGirarZoomClicked"/>
            </StackLayout>
        </StackLayout>
    </StackLayout>
</ContentPage>